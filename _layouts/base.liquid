<!doctype html>
<html lang="{{ site.active_lang }}">
  <head>
    <!-- Meta settings -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta
      name="description"
      content="{{ site.data[site.active_lang].strings.site_description }}"
    >

    <!-- Favicon -->
    <link
      rel="shortcut icon"
      href="/assets/img/brand/symbol/colored.ico"
      type="image/x-icon"
    >

    <!-- CSS Imports -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="/assets/css/style.css">

    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/@phosphor-icons/web"></script>

    <!-- Analytics -->
    <script
      data-goatcounter="https://levxyca.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"
    ></script>

    <!-- Light/Dark/System Theme -->
    <script src="{{ '/assets/js/theme.js' | relative_url }}"></script>

    <!-- Progressive Web App Manifest -->
    <link rel="manifest" href="diciotech.webmanifest">
    <link rel="apple-touch-icon" href="/assets/img/brand/symbol/colored.png">
  </head>

  <body>
    <header class="header">
      <a
        href="https://github.com/levxyca/diciotech"
        target="_blank"
        class="github-corner"
        aria-label="{{ site.data[site.active_lang].strings.view_on_github }}"
      >
        <svg viewBox="0 0 250 250" aria-hidden="true">
          <path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path>
          <path
            d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2"
            fill="currentColor"
            style="transform-origin: 130px 106px"
            class="octo-arm"
          ></path>
          <path
            d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z"
            fill="currentColor"
            class="octo-body"
          ></path>
        </svg>
      </a>
      <h1 class="header__title">
        <img
          src="/assets/img/brand/logo/colored.png"
          width="480"
          height="148"
          alt="Diciotech"
        >
      </h1>
      <h2 class="header__subtitle">
        {{ site.data[site.active_lang].strings.site_description }} ðŸ“– <br>
        {{ site.data[site.active_lang].strings.currently_with }}
        <span id="total-terms">0</span> {{ site.data[site.active_lang].strings.terms }} ðŸš€
      </h2>

      <!-- Toogle language -->
      <!-- based on https://github.com/george-gca/multi-language-al-folio/blob/main/_includes/header.liquid -->
      {% if site.languages.size >= 2 %}
        {% if site.languages.size == 2 %}
          {% if site.active_lang == site.languages.first %}
            {% assign other_language = site.languages.last %}
          {% else %}
            {% assign other_language = site.languages.first %}
          {% endif %}
          <li class="nav-item active">
            {% if site.active_lang == site.default_lang %}
              <a
                class="nav-link"
                {% static_href -%}
                href="{{ site.baseurl }}/{{ other_language }}{{ page.url }}"
                {%- endstatic_href %}
              >
                {{ other_language | upcase }}
              </a>
            {% else %}
              <a class="nav-link" {% static_href -%} href="{{ site.baseurl }}{{ page.url }}" {%- endstatic_href %}>
                {{ site.default_lang | upcase }}
              </a>
            {% endif %}
          </li>
        {% else %}
          <li class="nav-item dropdown {% if page.title == p.title %}active{% endif %}">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              {{- site.active_lang | upcase }}
              {% if page.title == p.title %}
                <span class="sr-only">(current)</span>
              {% endif %}
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              {% assign language_set = false %}
              {% for l in site.languages %}
                {% if l != site.active_lang %}
                  {% if language_set %}
                    <div class="dropdown-divider"></div>
                  {% endif %}
                  {% if l == site.default_lang %}
                    <a
                      class="dropdown-item"
                      {% static_href -%}
                      href="{{ site.baseurl }}{{ page.url }}"
                      {%- endstatic_href %}
                    >
                      {{ l | upcase }}
                    </a>
                  {% else %}
                    <a
                      class="dropdown-item"
                      {% static_href -%}
                      href="{{ site.baseurl }}/{{ l }}{{ page.url }}"
                      {%- endstatic_href %}
                    >
                      {{ l | upcase }}
                    </a>
                  {% endif %}
                  {% assign language_set = true %}
                {% endif %}
              {% endfor %}
            </div>
          </li>
        {% endif %}
      {% endif %}
      <!-- End Toogle language -->

      <button
        id="change-theme-button"
        class="button-change-theme"
        title="{{ site.data[site.active_lang].strings.change_theme }}"
      >
        <i class="ph ph-desktop"></i>
        <i class="ph ph-moon"></i>
        <i class="ph ph-sun"></i>
      </button>
    </header>
    <main class="main">
      <div class="search">
        <div class="searchbar">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="searchbar__icon"
            viewBox="0 0 16 16"
          >
            <path
              d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"
            />
          </svg>
          <input
            id="search-input"
            type="text"
            name="search-input"
            placeholder="{{ site.data[site.active_lang].strings.search_placeholder }}"
            class="searchbar__input"
          >
        </div>
        <div class="filter">
          <label for="tags-filter" class="filter_label">{{ site.data[site.active_lang].strings.filter_by_category }}</label>
          <select id="tags-filter">
            <option value="{{ site.data[site.active_lang].strings.all }}" selected>{{ site.data[site.active_lang].strings.all }}</option>
          </select>
        </div>
      </div>
      <section class="cards" id="cards"></section>
      <div class="cookies-container">
        <div class="cookies-content">
          <p class="cookies-message">
            {{ site.data[site.active_lang].strings.cookies_message }}
            <a
              href="https://cookie-consent.app.forthe.top/why-websites-use-cookies/"
              target="_blank"
            >
              {{- site.data[site.active_lang].strings.read_more -}}
            </a>
          </p>
          <div class="cookies-buttons">
            <button class="cookies-accept-button">{{ site.data[site.active_lang].strings.accept_cookies }}</button>
          </div>
        </div>
      </div>
    </main>
    <script
    src="{% if site.active_lang != site.default_lang %}{{ '/assets/js/scripts.js' | prepend: site.active_lang | relative_url }}{% else %}{{ '/assets/js/scripts.js' | relative_url }}{% endif %}" type="module"
  ></script>
    <script src="{{ '/assets/js/cookies.js' | relative_url }}" type="module"></script>
    <script src="{{ '/assets/js/pwa.js' | relative_url }}"></script>
  </body>
</html>
